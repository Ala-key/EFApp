@model EFTestApp.Models.Person

@{
    ViewData["Title"] = "Login";
}

<div class="container border">
    <form method="post">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" />
            </div>
            <div class="col-2">
                <label asp-for="Age"></label>
            </div>
            <div class="col-4">
                <input asp-for="Age" />
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <input type="submit" class="btn-primary" value="Login"/>
                </div>
                
            </div>
        </div>
    </form>
</div>